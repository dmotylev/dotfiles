# vim: ft=zsh:

function df_gcloud_setup {
    local gcloud_dir=/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk
    if [[ ! -d $gcloud_dir ]] {
        df_error "google-cloud-sdk not found; install it with $_ti[bold]brew cask install google-cloud-sdk" 
        return 1
    }
    [[ -f $gcloud_dir/path.zsh.inc ]] && source $gcloud_dir/path.zsh.inc
    [[ -f $gcloud_dir/completion.zsh.inc ]] && source $gcloud_dir/completion.zsh.inc
    unfunction df_gcloud_setup
}
df_gcloud_setup
