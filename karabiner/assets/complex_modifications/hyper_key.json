{
    "title": "Hyper Key",
    "rules": [
        {
            "description": "Use CapsLock as Shift+Control+Option+Command modifier",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_shift",
                            "modifiers": [
                                "left_command",
                                "left_control",
                                "left_option"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
